#!/bin/bash
# Test runner script for SeleniumBase API
# This script runs all Python tests for the project

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}================================${NC}"
echo -e "${YELLOW}SeleniumBase API Test Runner${NC}"
echo -e "${YELLOW}================================${NC}"
echo ""

# Get the script directory and project root
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
API_DIR="$PROJECT_ROOT/api"

# Check if API directory exists
if [ ! -d "$API_DIR" ]; then
    echo -e "${RED}Error: API directory not found at $API_DIR${NC}"
    exit 1
fi

# Check if tests directory exists
if [ ! -d "$API_DIR/tests" ]; then
    echo -e "${RED}Error: Tests directory not found at $API_DIR/tests${NC}"
    exit 1
fi

# Change to API directory
cd "$API_DIR"

echo -e "${YELLOW}Running tests from: $API_DIR${NC}"
echo ""

# Run the tests
echo -e "${GREEN}Running all tests...${NC}"
echo ""

# Use python3 -m unittest discover to run all tests
python3 -m unittest discover tests -v

# Check exit status
if [ $? -eq 0 ]; then
    echo ""
    echo -e "${GREEN}================================${NC}"
    echo -e "${GREEN}All tests passed!${NC}"
    echo -e "${GREEN}================================${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}================================${NC}"
    echo -e "${RED}Some tests failed!${NC}"
    echo -e "${RED}================================${NC}"
    exit 1
fi
